<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.SDIOS.ServiceControl.Recycler.ChooseUpdate"
            android:label="@string/title_activity_choose_update"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.SDIOS.ServiceControl.PackageManagerClient.UpdateServerAddress"
            android:label="@string/update_server"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.SDIOS.ServiceControl.Statistics.ScoreBoard"
            android:label="@string/score_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.SDIOS.ServiceControl.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.SDIOS.ServiceControl.Service.SDIOSAnalyzerService"
            android:description="@string/service_description"
            android:exported="true" />
        <!--            android:permission="android.permission.HIGH_SAMPLING_RATE_SENSORS" -->

    </application>
</manifest>